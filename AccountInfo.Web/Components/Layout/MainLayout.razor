@inherits LayoutComponentBase

<TelerikRootComponent>
<div class="page app-layout-wrapper">
    <div class="sidebar">
        <NavMenu />
    </div><div>
    <TelerikAppBar ThemeColor="@ThemeConstants.AppBar.ThemeColor.Primary"
    Position="AppBarPosition.Top"
    PositionMode="AppBarPositionMode.Static"
    Class="mb-4">
        <AppBarSection>
            <div class="d-flex align-items-center">
                <span class="k-icon k-i-globe me-2"></span>
                <span class="fs-5">Account Info Dashboard</span>
            </div>
        </AppBarSection>
        
    </TelerikAppBar>
            <main>
               

                <article class="content px-4">
                    @Body
                </article>
            </main>

            <TelerikAppBar ThemeColor="@ThemeConstants.AppBar.ThemeColor.Primary"
                           Position="AppBarPosition.Bottom"
                           PositionMode="AppBarPositionMode.Static"
                           Class="appbar-bottom">
                <AppBarSpacer />
                <AppBarSection>
                    <div id="copyright">
                        Copyright &copy; @DateTime.Today.Year McElroy Metal Inc. All rights reserved.
                    </div>
                </AppBarSection>
                <AppBarSpacer />
            </TelerikAppBar>

</div>

    
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
</TelerikRootComponent>

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    app-layout-wrapper {
        height: 100vh;
        display: flex;
        flex-direction: column;
    }
</style>